@model WebSuiBeauty.Models.OrderVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body style="margin-top:100px">
    <section class="order-form">
        <div class="order-form-grid">
            <div class="wrapper">
                <div class="order-form-block-grid">
                    <div class="form-right-inf">

                        <div class="login-form-content">
                            <h2>Đặt hàng</h2>
                            <div class="row">
                                <div class="col-md-6">
                                    @using (Html.BeginForm("PlaceOrder", "Order", FormMethod.Post, new { @class = "order-form" }))

                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="row mb-2">
                                            <div id="msg">

                                            </div>
                                        </div>
                                        <div class="one-frm">
                                            @Html.LabelFor(x => x.CustomerName, new { @class = "form-label fs-8" })
                                            @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control fs-8" })
                                            @Html.ValidationMessageFor(x => x.CustomerName, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="one-frm">
                                            @Html.LabelFor(x => x.CustomerAddress, new { @class = "form-label fs-8" })
                                            @Html.TextBoxFor(x => x.CustomerAddress, new { @class = "form-control fs-8" })
                                            @Html.ValidationMessageFor(x => x.CustomerAddress, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="one-frm">
                                            @Html.LabelFor(x => x.CustomerEmail, new { @class = "form-label fs-8" })
                                            @Html.TextBoxFor(x => x.CustomerEmail, new { @class = "form-control fs-8", Type = "email" })
                                            @Html.ValidationMessageFor(x => x.CustomerEmail, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="one-frm">
                                            @Html.LabelFor(x => x.CustomerMobile, new { @class = "form-label fs-8" })
                                            @Html.TextBoxFor(x => x.CustomerMobile, new { @class = "form-control fs-8", Type = "password" })
                                            @Html.ValidationMessageFor(x => x.CustomerMobile, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="one-frm">
                                            @Html.LabelFor(x => x.CustomerMessage, new { @class = "form-label fs-8" })
                                            @Html.EditorFor(x => x.CustomerMessage, new { htmlAttributes = new { @class = "form-control fs-8" }, Type = "date" })
                                            @Html.ValidationMessageFor(x => x.CustomerMessage, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="one-frm">
                                            @Html.LabelFor(x => x.PaymentMethod, new { @class = "form-label fs-8" })
                                            @Html.DropDownListFor(model => model.PaymentMethod, ViewBag.PaymentMethods as SelectList, "-- Phương thức thanh toán --", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.PaymentMethod, "", new { @class = "text-danger" })
                                        </div>
                                        <button type="submit" class="btn-success" style="padding:15px;border-radius:10px;width:150px;margin-top:20px;font-size:18px">Đặt hàng </button>
                              
                                    }
                                </div>
                                <div class="col-md-6">
                                    @if (WebSuiBeauty.Models.TempDataVM.items != null)
                                    {
                                        foreach (var item in WebSuiBeauty.Models.TempDataVM.items)
                                        {
                                            <div class="container" style="width:80%;padding:15px;margin-bottom:15px;border-radius:15px;background-color:papayawhip">
                                                <div class="row">
                                                    <div class="col-md-6">
                                              
                                                        <img src="@Url.Content(item.Product.Image)" />
                                                    </div>
                                                    <div class="col-md-6">
                                                        <h6 style="color:deeppink">Sản phẩm: @item.Product.Name</h6>
                                                        <p style="font-size:14px; margin-bottom:0 !important">Giá: @item.Price.ToString("N0")đ</p>
                                                        <p style="font-size:14px">Số lượng: @item.Quantity</p>
                                                        <p style="font-weight:bold;font-size:14px">Tổng: @item.Total.ToString("N0")đ</p>
                                                    </div>
                                                </div>
                                            </div>
                                         }

                                    }
                                    else
                                    {
                                        <p>Vui lòng đăng nhập</p>
                                        <a class="btn-success">Đăng nhập</a>
                                    }
                                            </div>
                                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- //form -->
    </section>
</body>

