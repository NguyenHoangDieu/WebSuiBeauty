

@model WebSuiBeauty.Data.Employee
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-8">
                <div class="about-text go-to">
                    <h2 class="dark-color">Hồ sơ cá nhân</h2>
                    <hr />
                    <h3 style="padding-bottom:1vw" class="theme-color lead fs-2">@Html.DisplayFor(x => x.FirstName)&nbsp;@Html.DisplayFor(x => x.LastName)</h3>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <p>Ngày sinh: @Html.DisplayFor(x => x.DateofBirth)</p>
                            </div>
                            <div class="media">
                           
                                <p>Địa chỉ: @Html.DisplayFor(x => x.Address)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                           
                                <p>Email: @Html.DisplayFor(x => x.Email)</p>
                            </div>
                            <div class="media">
                            
                                <p>Số điện thoại: @Html.DisplayFor(x => x.Phone)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 @*d-flex justify-content-end*@">
                <div class="about-avatar">
                    @if (!string.IsNullOrEmpty(Model.PicturePath))
                    {
                        <img src="@Url.Content(Model.PicturePath)" title="No Image" alt="" width="250" height="250">
                    } 
                </div>
            </div>
        </div>
        <div class="counter mt-4">
            <div class="row">
                <div class="col-6 col-lg-3">
                    <a href="@Url.Action("Index", "AdminDashboard")" class="btn btn-danger btn-sm fs-4"><i class="fa-regular fa-hand-back-point-left"></i> Back</a>
                </div>
            </div>
        </div>
    </div>
</section>


