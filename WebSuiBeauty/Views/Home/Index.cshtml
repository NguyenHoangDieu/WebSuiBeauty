@model WebSuiBeauty.Data.Product
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        .img-banner{
            height: 550px;
            width:100%;
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body style="margin-top:60px">
    <!-- banner section start -->
    <div class="container">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="img-banner" src="~/Assets/Images/banner.jpg">
                </div>
                <div class="carousel-item">
                    <img class="img-banner" src="~/Assets/Images/about-img.png">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <script>
            $('.carousel').carousel
        </script>
    </div>
    <!-- banner section end -->
    <!-- about section start -->
    <div class="about_section">
        <div class="container" >
            <div class="about_section_main" style="background-color: #fef4ec;padding:30px">
                <div class="row">
                    <div class="col-md-6">

                        <div class="about_taital_main">
                            <h1 class="banner_taital" style="color:deeppink">Sui <br>Beauty</h1>
                            <p class="banner_text" style="font-size:20px;font-weight:400">Giúp bạn có một diện mạo mới</p>
                            <p class="about_text">Sui Beauty ra đời và phát triển dựa trên mục đích mang đến cho khách hàng dựa vào 3 yếu tố tươi trẻ, sắc đẹp và thịnh vượng. Sui Beauty với sứ mệnh mang đến cho khách hàng vẻ đẹp hoàn hảo và tự tin hơn trong cuộc sống. Sui Beauty sở hữu nhiều dòng mỹ phẩm như: Trang điểm mặt, tẩy trang nước hoa. Sửa tắm, dưỡng thể..</p>
                            <div class="readmore_bt"><a href="#">Đọc Thêm </a></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div><img src="~/Assets/Images/about-img.png" class="image_3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- about section end -->
    <!-- product section start -->
    <div class="product_section">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1 style="color:deeppink" class="product_taital">Sản Phẩm</h1>
                </div>
            </div>
            <div class="product_section_2 layout_padding">
                <div class="container" style="border:1px solid gray; border-radius:10px; padding:20px">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="dd-button" data-bs-toggle="tab" data-bs-target="#dd-tab" type="button" role="tab" aria-controls="dd-tab" aria-selected="true">Dưỡng da</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="td-button" data-bs-toggle="tab" data-bs-target="#td-tab" type="button" role="tab" aria-controls="td-tab" aria-selected="false">Trang điểm</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="sm-button" data-bs-toggle="tab" data-bs-target="#sm-tab" type="button" role="tab" aria-controls="sm-tab" aria-selected="false">Son môi</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="db-button" data-bs-toggle="tab" data-bs-target="#db-tab" type="button" role="tab" aria-controls="db-tab" aria-selected="false">Dưỡng body</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="tss-tab" data-bs-toggle="tab" data-bs-target="#tss-tab" type="button" role="tab" aria-controls="tss-tab" aria-selected="false">Trang sức</button>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane active" id="dd-tab" role="tabpanel" aria-labelledby="dd-tab">
                            <div class="row">
                                @foreach (var item in (List<WebSuiBeauty.Data.Product>)@ViewBag.DuongDa)
                                {
                                    { Html.RenderPartial("_ProductPartial", item); }
                                }
                            </div>
                        </div>
                        <div class="tab-pane" id="td-tab" role="tabpanel" aria-labelledby="td">
                            <div class="row">
                                @foreach (var item in (List<WebSuiBeauty.Data.Product>)@ViewBag.TrangDiem)
                                {
                                    { Html.RenderPartial("_ProductPartial", item); }
                                }
                            </div>
                        </div>
                        <div class="tab-pane" id="sm-tab" role="tabpanel" aria-labelledby="sm-tab">
                            <div class="row">
                                @foreach (var item in (List<WebSuiBeauty.Data.Product>)@ViewBag.SonMoi)
                                {
                                    { Html.RenderPartial("_ProductPartial", item); }
                                }
                            </div>
                        </div>
                        <div class="tab-pane" id="db-tab" role="tabpanel" aria-labelledby="db-tab">
                            <div class="row">
                                @foreach (var item in (List<WebSuiBeauty.Data.Product>)@ViewBag.DuongBody)
                                {
                                    { Html.RenderPartial("_ProductPartial", item); }
                                }
                            </div>
                        </div>
                        <div class="tab-pane" id="tss-tab" role="tabpanel" aria-labelledby="tss-tab">
                            <div class="row">
                                @foreach (var item in (List<WebSuiBeauty.Data.Product>)@ViewBag.TrangSuc)
                                {
                                    { Html.RenderPartial("_ProductPartial", item); }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="seemore_bt"><a href="#">Xem Thêm</a></div>
                </div>
            </div>

        </div>
    </div>
    <!-- product section end -->

    <!-- footer section start -->
    <div class="footer_section layout_padding">
        <div class="container">
            <div class="footer_logo"><a href="index.html"><img src="images/footer-logo.png"></a></div>
            <div class="contact_section_2">
                <div class="row">
                    <div class="col-sm-4">
                        <h3 class="address_text">Liên hệ</h3>
                        <div class="address_bt">
                            <ul>
                                <li>
                                    <a href="#">
                                        <i class="fa fa-map-marker" aria-hidden="true"></i><span class="padding_left10">Address : Hà Nội</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="fa fa-phone" aria-hidden="true"></i><span class="padding_left10">Call : +01 1234567890</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="fa fa-envelope" aria-hidden="true"></i><span class="padding_left10">Email : demo@gmail.com</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="footer_logo_1"><a href="index.html"><img src="images/footer-logo.png"></a></div>
                        <p class="dummy_text">Với phương châm luôn nỗ lực vì khách hàng thân yêu, SuiBeauty không ngừng cố gắng để xứng đáng là địa điểm mua sắm tin cậy đối với các bạn trẻ.</p>
                    </div>
                    <div class="col-sm-4">
                        <div class="main">
                            <h3 class="address_text">Best Products</h3>
                            <p class="ipsum_text">dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="social_icon">
                <ul>
                    <li>
                        <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- footer section end -->
    <!-- copyright section start -->
    <div class="copyright_section">
        <div class="container-fluid">
            <p class="copyright_text">2023 All Rights Reserved. Design by <a href="https://www.facebook.com/duyenduyen2803">DuyenNgo from HUST</a></p>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="~/Assets/Js/jquery.min.js"></script>
    <script src="https:cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "100%";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }
    </script>
    <script>
        window.onload = function () {
            document.body.style.width = window.innerWidth + "px";
            document.body.style.height = window.innerHeight + "px";
        };
    </script>
    <script>
        var firstTabEl = document.querySelector('#myTab li:last-child a')
        var firstTab = new bootstrap.Tab(firstTabEl)

        firstTab.show()
    </script>
    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
</body>

