@model WebSuiBeauty.Data.Product
<div class="col-lg-3 col-sm-6">
    <div class="product_box" style="border-radius:15px">
        <h5 class="bursh_text" style="color:deeppink">@Model.Name</h5>
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <div style="padding:20px">
                <div class="container" style="border-radius: 15px; background: pink;padding:10px">
                    <img style="width:100%;height:100%" src="@Url.Content(Model.Image)" alt="Hình ảnh" />
                </div>
            </div>
        }
        <div class="btn_main">
            <div class="buy_bt">
                <ul>
                    <li class="text-center">
                        <a class="aa-add-card-btn" title="Thêm vào giỏ hàng" href="@(Session["username"] != null ? Url.Action("AddToCart", "Product", new { id = @Model.Id}) : Url.Action("Login", "Account"))"><span class="fa fa-shopping-cart"></span></a>
                        <a class="aa-add-card-btn" href="@Url.Action("ViewDetails", "Product", new { id = Model.Id })" title="Xem chi tiết" data-toggle="tooltip" data-placement="top"><span class="fa fa-info"></span></a>
                    </li>
                </ul>
            </div>
            <h3 class="price_text">Giá:@(Model.Price.ToString("N0"))đ</h3>
        </div>
    </div>
</div>

